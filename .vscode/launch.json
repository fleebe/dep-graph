{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/index.js",
      "args": [
        "-o",
        "./out/bfree",
        "../nodejs/bfree/pages"  // This should be the positional argument (file|directory)
      ],
      "runtimeArgs": ["--experimental-modules"],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "This Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/index.js",
      "args": [
        "-j",
        "-g",
        "-c",
        "-d",
        "-o",
        "./docs",
        "./src"  // This is correctly positioned as the file|directory argument
      ],
      "runtimeArgs": ["--experimental-modules"],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Generate",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/index.js",
      "args": ["./src"],  // Simplified arguments with just the required positional argument
      "runtimeArgs": ["--experimental-modules"],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "console": "integratedTerminal"
    }
  ]
}